<binding>

	<include path="BasicString-binding.xml" />
	<include path="Author-binding.xml" />

	<mapping name="contributor" class="nl.knaw.dans.pf.language.emd.EmdContributor"
		ns="http://easy.dans.knaw.nl/easy/easymetadata/">

		<namespace uri="http://easy.dans.knaw.nl/easy/easymetadata/" prefix="emd" />
		<namespace uri="http://purl.org/dc/elements/1.1/" prefix="dc" />
		<namespace uri="http://easy.dans.knaw.nl/easy/easymetadata/eas/" prefix="eas" />

		<collection field="dcContributor" factory="nl.knaw.dans.pf.language.emd.types.ListFactory.basicStringList">
			<structure ns="http://purl.org/dc/elements/1.1/" name="contributor"
				type="nl.knaw.dans.pf.language.emd.types.BasicString" usage="optional"/>
		</collection>

		<collection field="easContributor" factory="nl.knaw.dans.pf.language.emd.types.ListFactory.authorList">
			<structure ns="http://easy.dans.knaw.nl/easy/easymetadata/eas/" name="contributor"
				type="nl.knaw.dans.pf.language.emd.types.Author" usage="optional"/>
		</collection>

	</mapping>

</binding>